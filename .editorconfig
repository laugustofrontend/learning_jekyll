root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html, css, scss}]
indent_style = tab
indent_size = 4

[*.js]
indent_style = space
indent_size = 2
insert_final_newline = true

[**.min.js]
indent_style = ignore
insert_final_newline = ignore
